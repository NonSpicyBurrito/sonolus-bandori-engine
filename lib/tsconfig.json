{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "module": "Node16",
        "target": "ES2021",
        "strict": true,
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node16",
        "outDir": "../dist",
        "rootDir": "./src",
        "declaration": true
    },
    "include": [
        "./src"
    ]
}
