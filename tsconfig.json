{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "module": "Node16",
        "target": "ESNext",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node16"
    },
    "include": [
        "./src"
    ]
}
